<div class="modal" id="exampleEditModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Edit Data </h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <%= form_tag update_question_path(id: @question.id), multipart: true, remote: true, method: :put do %>
        <div class="modal-body">

          <div class="form-group row">
            <!-- <label class="col-lg-2 col-form-label font-weight-semibold">File to Upload</label> -->
              <div class="form-group">
                <label for="exampleInputText">Pri</label>
                <%= text_field_tag 'priority', @question.priority , class: 'form-control value_text', placeholder: 'Enter Pri'%>
              </div>
              <div class="form-group">
                <label for="exampleInputText">Question</label>
                <%= text_field_tag 'question', @question.question , class: 'form-control value_text', placeholder: 'Enter Question'%>
              </div>
              <div class="form-group">
                <label for="exampleInputText">Teaming Stages</label>
                <%= text_field_tag 'teaming_stage', @question.teaming_stage , class: 'form-control value_text', placeholder: 'Enter Teaming Stages'%>
              </div>
              <div class="form-group">
                <label for="exampleInputText">Appears (Day)</label>
                <%= text_field_tag 'appears', @question.appears , class: 'form-control value_text', placeholder: 'Enter Apprears (Day)'%>
              </div>
              <div class="form-group">
                <label for="exampleInputText">Frequency</label>
                <%= text_field_tag 'frequency', @question.frequency , class: 'form-control value_text', placeholder: 'Enter Frequency'%>
              </div>
              <div class="form-group">
                <label for="exampleInputText">Type</label>
                <%= text_field_tag 'type_question', @question.type_question, class: 'form-control value_text', placeholder: 'Enter Type'%>
              </div>
              <div class="form-group">
                <label for="exampleInputText">Role</label>
                <%= text_field_tag 'role', @question.role.name , class: 'form-control value_text', placeholder: 'Enter Role'%>
              </div>
              <div class="form-group">
                <label for="exampleInputText">Required?</label>
                <%= text_field_tag 'required', @question.required , class: 'form-control value_text', placeholder: 'Enter Required?'%>
              </div>
              <div class="form-group">
                <label for="exampleInputText">Condition</label>
                <%= text_field_tag 'condition', @question.condition , class: 'form-control value_text', placeholder: 'Enter Condition'%>
              </div>
              <div class="form-group">
                <label for="exampleInputText">Mapping</label>
                <%= text_field_tag 'mapping', @question.mapping.name , class: 'form-control value_text', placeholder: 'Enter Mapping'%>
              </div>
          </div>
        </div>

        <div class="modal-footer">
          <button type="button" class="btn btn-link" data-dismiss="modal">Close</button>
          <%= submit_tag "Add data", class: 'btn bg-primary'%>
        </div>
      <% end %>
      </div>
    </div>
  </div>
</div>